extends base

block content
    if errorMessage
        span=errorMessage
    form(method="post")
        input(type="text", name="title", placeholder="Video Title", required, maxlength=80)
        input(type="text", name="description", placeholder="Description", required, minlength=20)
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", required) 
        input(type="submit", value="upload")